<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/fragment_header" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal" >


            <EditText
                android:id="@+id/alipayAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="4dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/color_small_gray"
                android:textSize="@dimen/app_text_size_first"
                android:background="@drawable/recharge_shape"
                android:inputType="phone"
                android:maxLines="1"
                android:hint="请输入支付宝账号"
                android:layout_gravity="left"
                android:singleLine="true"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="18dp"
            android:orientation="horizontal" >


            <EditText
                android:id="@+id/alipayName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="4dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/color_small_gray"
                android:textSize="@dimen/app_text_size_first"
                android:background="@drawable/recharge_shape"
                android:maxLines="1"
                android:hint="请输入支付宝账号姓名"
                android:singleLine="true"
                 />
        </LinearLayout>



    <TextView
        android:id="@+id/recharge_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_selector2"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="绑定"
        android:textColor="@color/white"
        android:textSize="@dimen/app_text_size_most" />

</LinearLayout>