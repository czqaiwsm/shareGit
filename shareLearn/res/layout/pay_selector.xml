<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl"
        >


    <!--<View android:layout_width="match_parent"
          android:layout_height="match_parent"
            />-->
    <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:background="@drawable/pop_bottom">

        <ImageView android:id="@+id/alipay"
                   android:layout_width="70dp"
                   android:layout_height="70dp"
                   android:src="@drawable/alipy"
                   android:layout_marginLeft="8dp"
                   android:layout_alignParentLeft="true"/>
        <ImageView android:id="@+id/wxPay"
                   android:layout_width="70dp"
                   android:layout_height="70dp"
                   android:layout_toRightOf="@+id/alipay"
                   android:layout_alignBottom="@+id/alipay"
                   android:layout_marginLeft="8dp"
                   android:src="@drawable/weixin_selector"/>
    </RelativeLayout>

</RelativeLayout>