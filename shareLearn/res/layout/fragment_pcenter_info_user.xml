<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/fragment_header" />

    <com.share.learn.view.FlowScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_bg_home"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/photo_avatar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_click"
                android:paddingLeft="@dimen/app_text_size_min"
                android:paddingRight="@dimen/app_text_size_min"
            >

                <TextView android:id="@+id/photo"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/color_small_gray"
                          android:textSize="@dimen/pc_txt_size"
                          android:layout_centerVertical="true"
                          android:text="头像"/>

                <TextView
                        android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/app_text_size_min"
                    android:drawableRight="@drawable/arrow_right"
                    android:textColor="@color/color_small_gray"
                    android:textSize="@dimen/pc_txt_size" />

                <com.share.learn.view.RoundImageView
                        android:id="@+id/account_head_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/aot"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:layout_toLeftOf="@+id/img"
                        android:adjustViewBounds="true" />

                <View android:layout_width="match_parent"
                      android:layout_height="@dimen/line"
                      android:background="@color/color_small_gray"
                      android:layout_alignParentBottom="true"
                />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_click"
                android:padding="@dimen/app_text_size_min" >
                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="姓名"
                    android:textColor="@color/color_small_gray"
                    android:textSize="@dimen/pc_txt_size" />

                <TextView
                    android:id="@+id/nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/app_text_size_min"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:text="张三"
                    android:textColor="@color/color_small_gray"
                    android:textSize="@dimen/pc_txt_size" />

            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="@dimen/line"
                  android:background="@color/color_small_gray"
                  android:layout_marginRight="@dimen/app_text_size_min"
                  android:layout_marginLeft="@dimen/app_text_size_min"
            />
            <RelativeLayout
                android:id="@+id/sex_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_click"
                android:padding="@dimen/app_text_size_min" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="性别"
                    android:textColor="@color/color_small_gray"
                    android:textSize="@dimen/pc_txt_size" />

                <TextView
                    android:id="@+id/account_sexname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/app_text_size_min"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:textColor="@color/color_small_gray"
                    android:textSize="@dimen/pc_txt_size"
                    android:text="男"/>
            </RelativeLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="@dimen/line"
                  android:background="@color/color_small_gray"
                  android:layout_marginRight="@dimen/app_text_size_min"
                  android:layout_marginLeft="@dimen/app_text_size_min"
            />
            <RelativeLayout
                android:id="@+id/jonior_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_click"
                android:padding="@dimen/app_text_size_min" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="年级"
                    android:textColor="@color/color_small_gray"
                    android:textSize="@dimen/pc_txt_size" />

                <TextView
                    android:id="@+id/account_joniorname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/app_text_size_min"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:textColor="@color/color_small_gray"
                    android:textSize="@dimen/pc_txt_size"
                    android:text="二年级"/>
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="@dimen/line"
                  android:background="@color/color_small_gray"
                  android:layout_marginRight="@dimen/app_text_size_min"
                  android:layout_marginLeft="@dimen/app_text_size_min"
            />
            <!--<RelativeLayout
                android:id="@+id/city_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_click"
                android:padding="@dimen/app_text_size_min" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="城市"
                    android:textColor="@color/color_small_gray"
                    android:textSize="@dimen/pc_txt_size" />

                <TextView
                    android:id="@+id/account_cityname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/app_text_size_min"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:textColor="@color/color_small_gray"
                    android:textSize="@dimen/pc_txt_size"
                    android:text="合肥市"/>
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/dap_line"
                  android:layout_marginRight="@dimen/app_text_size_min"
                  android:layout_marginLeft="@dimen/app_text_size_min"
            />
            <RelativeLayout
                android:id="@+id/teachAge_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_click"
                android:padding="@dimen/app_text_size_min" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="教龄"
                    android:textColor="@color/color_small_gray"
                    android:textSize="@dimen/pc_txt_size" />

                <TextView
                    android:id="@+id/teacher_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/app_text_size_min"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:textColor="@color/color_small_gray"
                    android:textSize="@dimen/pc_txt_size"
                    android:text=""/>
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/dap_line"
                  android:layout_marginRight="@dimen/app_text_size_min"
                  android:layout_marginLeft="@dimen/app_text_size_min"
            />
            <RelativeLayout
                android:id="@+id/signature_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_click"
                android:padding="@dimen/app_text_size_min" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="签名"
                    android:textColor="@color/color_small_gray"
                    android:textSize="@dimen/pc_txt_size" />

                <TextView
                    android:id="@+id/signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/app_text_size_min"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:textColor="@color/color_small_gray"
                    android:textSize="@dimen/pc_txt_size"
                    android:text="填写属于您的签名"/>
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/dap_line"
                  android:layout_marginRight="@dimen/app_text_size_min"
                  android:layout_marginLeft="@dimen/app_text_size_min"
            />
            <RelativeLayout
                android:id="@+id/indure_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_click"
                android:padding="@dimen/app_text_size_min" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="简介"
                    android:textColor="@color/color_small_gray"
                    android:textSize="@dimen/pc_txt_size" />

                <TextView
                    android:id="@+id/indure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/app_text_size_min"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:textColor="@color/color_small_gray"
                    android:textSize="@dimen/pc_txt_size"
                    android:text="一句话简介"/>
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/dap_line"
                  android:layout_marginRight="@dimen/app_text_size_min"
                  android:layout_marginLeft="@dimen/app_text_size_min"
            />
            <RelativeLayout
                android:id="@+id/reputation_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_click"
                android:padding="@dimen/app_text_size_min" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="荣誉经历"
                    android:textColor="@color/color_small_gray"
                    android:textSize="@dimen/pc_txt_size" />

                <TextView
                    android:id="@+id/reputation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/app_text_size_min"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:textColor="@color/color_small_gray"
                    android:textSize="@dimen/pc_txt_size"
                    android:text="填写您的荣誉经历"/>
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/dap_line"
                  android:layout_marginRight="@dimen/app_text_size_min"
                  android:layout_marginLeft="@dimen/app_text_size_min"
            />-->
        </LinearLayout>
    </com.share.learn.view.FlowScrollView>

</LinearLayout>