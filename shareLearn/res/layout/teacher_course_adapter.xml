<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@null"
              android:gravity="center_vertical"
              android:layout_gravity="center">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="4dp"
    >
        <TextView android:id="@+id/teacher_course"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="小学语文"
                  android:textColor="@color/course_txt"
                  android:layout_marginLeft="@dimen/msg_margin"
                  android:textSize="@dimen/teache_curose"/>
        <TextView android:id="@+id/buy"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/teache_curose"
                  android:textColor="@color/course_solid"
                  android:paddingBottom="6dp"
                  android:paddingTop="6dp"
                  android:paddingRight="@dimen/dp_15"
                  android:paddingLeft="@dimen/dp_15"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="@dimen/msg_margin"
                  android:background="@drawable/course_txt"
                  android:gravity="center_vertical"
                  android:layout_centerVertical="true"
                  android:text="购买"/>
        <TextView android:id="@+id/couse_price"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/teache_curose"
                  android:textColor="@color/course_solid"
                  android:layout_below="@+id/teacher_course"
                  android:layout_marginRight="@dimen/msg_margin"
                  android:layout_marginLeft="@dimen/msg_margin"
                  android:layout_marginBottom="2dp"
                  android:text="50元/每小时"/>
        <View android:layout_width="match_parent"
              android:layout_height="0.5dp"
              android:background="@color/color_small_gray"
              android:layout_below="@+id/buy"
              android:layout_marginRight="@dimen/msg_margin"
              android:layout_marginLeft="@dimen/msg_margin"
              android:layout_marginTop="14dp"
        />
    </RelativeLayout>
</LinearLayout>