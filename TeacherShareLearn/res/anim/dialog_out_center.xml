<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
     android:shareInterpolator="false"
     android:duration="@integer/svanimation_default_duration">

  <scale
      android:duration="@integer/svanimation_default_duration"
      android:fromXScale="100%"
      android:toXScale="0"
      android:fromYScale="100%"
      android:toYScale="0"
      android:pivotX="50%"
      android:pivotY="50%"/>

  <alpha
      android:duration="@integer/svanimation_default_duration"
      android:fromAlpha="1"
      android:toAlpha="0"/>

</set>