<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

    <include layout="@layout/fragment_header"></include>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <RelativeLayout
                    android:id="@+id/studentNameRl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/page_certify"
                    android:paddingBottom="@dimen/page_certify"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/item_click">
                <TextView android:layout_width="@dimen/teach_txt_size"
                          android:layout_height="match_parent"
                          android:textSize="@dimen/teach_font_size"
                          android:layout_gravity="center"
                          android:gravity="center_vertical"
                          android:textColor="@color/teach_txt_color"
                          android:text="学生姓名"/>
                <TextView android:id="@+id/studentName"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:textSize="@dimen/teach_font_size"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:textColor="@color/teach_txt_color2"
                          android:drawableRight="@drawable/arrow_right"
                          android:layout_alignParentRight="true"
                          android:drawablePadding="@dimen/choose_padd"
                />

            </RelativeLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_small_gray"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"/>

            <RelativeLayout
                    android:id="@+id/subjectRL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/page_certify"
                    android:paddingBottom="@dimen/page_certify"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/item_click">
                <TextView android:layout_width="@dimen/teach_txt_size"
                          android:layout_height="match_parent"
                          android:textSize="@dimen/teach_font_size"
                          android:layout_gravity="center"
                          android:gravity="center_vertical"
                          android:textColor="@color/teach_txt_color"
                          android:text="科目"/>
                <TextView android:id="@+id/subjectName"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:textSize="@dimen/teach_font_size"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:textColor="@color/teach_txt_color2"
                          android:drawableRight="@drawable/arrow_right"
                          android:layout_alignParentRight="true"
                          android:drawablePadding="@dimen/choose_padd"
                />

            </RelativeLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_small_gray"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"/>

            <RelativeLayout
                    android:id="@+id/joniorRl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/page_certify"
                    android:paddingBottom="@dimen/page_certify"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/item_click">
                <TextView android:layout_width="@dimen/teach_txt_size"
                          android:layout_height="match_parent"
                          android:textSize="@dimen/teach_font_size"
                          android:layout_gravity="center"
                          android:gravity="center_vertical"
                          android:textColor="@color/teach_txt_color"
                          android:text="年级"/>
                <TextView android:id="@+id/joniorName"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:textSize="@dimen/teach_font_size"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:textColor="@color/teach_txt_color2"
                          android:drawableRight="@drawable/arrow_right"
                          android:layout_alignParentRight="true"
                          android:drawablePadding="@dimen/choose_padd"
                />

            </RelativeLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_small_gray"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"/>

            <RelativeLayout
                    android:id="@+id/frequencyRl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/page_certify"
                    android:paddingBottom="@dimen/page_certify"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/item_click">
                <TextView android:layout_width="@dimen/teach_txt_size"
                          android:layout_height="match_parent"
                          android:textSize="@dimen/teach_font_size"
                          android:layout_gravity="center"
                          android:gravity="center_vertical"
                          android:textColor="@color/teach_txt_color"
                          android:text="上课频次"/>
                <TextView android:id="@+id/frequencyName"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:textSize="@dimen/teach_font_size"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:textColor="@color/teach_txt_color2"
                          android:drawableRight="@drawable/arrow_right"
                          android:layout_alignParentRight="true"
                          android:drawablePadding="@dimen/choose_padd"
                />

            </RelativeLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_small_gray"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"/>

            <RelativeLayout
                    android:id="@+id/timeRl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/page_certify"
                    android:paddingBottom="@dimen/page_certify"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/item_click">
                <TextView android:layout_width="@dimen/teach_txt_size"
                          android:layout_height="match_parent"
                          android:textSize="@dimen/teach_font_size"
                          android:layout_gravity="center"
                          android:gravity="center_vertical"
                          android:textColor="@color/teach_txt_color"
                          android:text="上课时间"/>
                <TextView android:id="@+id/time"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:textSize="@dimen/teach_font_size"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:textColor="@color/teach_txt_color2"
                          android:drawableRight="@drawable/arrow_right"
                          android:layout_alignParentRight="true"
                          android:drawablePadding="@dimen/choose_padd"
                />
            </RelativeLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_small_gray"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"/>


            <TextView
                    android:layout_marginTop="100dp"
                    android:id="@+id/sure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="确定"
                    android:background="@drawable/login_selector2"
                    android:textSize="@dimen/app_text_size_most"
                    android:textColor="@android:color/white"
                    android:padding="12dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center_horizontal"
            />

        </LinearLayout>
    </ScrollView>
</LinearLayout>