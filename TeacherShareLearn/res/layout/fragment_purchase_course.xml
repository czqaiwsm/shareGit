<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/fragment_header"/>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

            <RelativeLayout
                    android:id="@+id/balance_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_click"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:padding="@dimen/app_text_size_min">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="课程"
                        android:textColor="@color/color_small_gray"
                        android:textSize="@dimen/purchase_txt_size"/>
                <TextView
                        android:id="@+id/couseName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/app_text_size_min"
                        android:gravity="center_vertical|right"
                        android:singleLine="true"
                        android:textColor="@color/color_small_gray"
                        android:textSize="@dimen/purchase_txt_size"
                        android:text="小学语文"/>
            </RelativeLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@drawable/dap_line"
                  android:layout_marginRight="@dimen/app_text_size_min"
                  android:layout_marginLeft="@dimen/app_text_size_min"
            />

            <RelativeLayout
                    android:id="@+id/recharge_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_click"
                    android:padding="@dimen/app_text_size_min">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="价格"
                        android:textColor="@color/color_small_gray"
                        android:textSize="@dimen/purchase_txt_size"/>
                <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/app_text_size_min"
                        android:gravity="center_vertical|right"
                        android:singleLine="true"
                        android:textColor="@color/color_small_gray"
                        android:textSize="@dimen/purchase_txt_size"
                        android:text="￥100/次"
                />
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@drawable/dap_line"
                  android:layout_marginRight="@dimen/app_text_size_min"
                  android:layout_marginLeft="@dimen/app_text_size_min"
            />
            <RelativeLayout
                    android:id="@+id/buy_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_click"
                    android:padding="@dimen/app_text_size_min">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="购买次数"
                        android:textColor="@color/color_small_gray"
                        android:textSize="@dimen/purchase_txt_size"/>

                <TextView
                        android:id="@+id/account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/app_text_size_min"
                        android:drawableRight="@drawable/arrow_right"
                        android:gravity="center_vertical|right"
                        android:singleLine="true"
                        android:textColor="@color/color_small_gray"
                        android:textSize="@dimen/purchase_txt_size"
                        android:text="1次"
                />
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@drawable/dap_line"
                  android:layout_marginRight="@dimen/app_text_size_min"
                  android:layout_marginLeft="@dimen/app_text_size_min"
            />
            <RelativeLayout
                    android:id="@+id/favourable_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_click"
                    android:padding="@dimen/app_text_size_min">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="优惠金额"
                        android:textColor="@color/color_small_gray"
                        android:textSize="@dimen/purchase_txt_size"/>

                <TextView
                        android:id="@+id/favourable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/app_text_size_min"
                        android:gravity="center_vertical|right"
                        android:singleLine="true"
                        android:textColor="@color/login_normal"
                        android:textSize="@dimen/purchase_txt_size"
                        android:text="￥10"
                />
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@drawable/dap_line"
                  android:layout_marginRight="@dimen/app_text_size_min"
                  android:layout_marginLeft="@dimen/app_text_size_min"
            />
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_click"
                    android:padding="@dimen/app_text_size_min">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="实付金额"
                        android:textColor="@color/color_small_gray"
                        android:textSize="@dimen/purchase_txt_size"/>

                <TextView
                        android:id="@+id/truePay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/app_text_size_min"
                        android:gravity="center_vertical|right"
                        android:singleLine="true"
                        android:textColor="@color/login_normal"
                        android:textSize="@dimen/purchase_txt_size"
                        android:text="￥90"
                />
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@drawable/dap_line"
                  android:layout_marginRight="@dimen/app_text_size_min"
                  android:layout_marginLeft="@dimen/app_text_size_min"
            />
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_click"
            >
                <TextView
                        android:id="@+id/teach_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:text="上课地址"
                        android:textColor="@color/color_small_gray"
                        android:textSize="@dimen/purchase_txt_size"/>
                <EditText
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@+id/teach_add"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical|right"
                        android:singleLine="true"
                        android:textColor="@color/color_small_gray"
                        android:textSize="@dimen/purchase_txt_size"
                        android:background="@null"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:padding="@dimen/app_text_size_min"
                        android:text="1次"
                />
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@drawable/dap_line"
                  android:layout_marginRight="@dimen/app_text_size_min"
                  android:layout_marginLeft="@dimen/app_text_size_min"
            />

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="match_parent">
                <TextView
                        android:layout_marginTop="28dp"
                        android:id="@+id/login_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="立即支付"
                        android:background="@drawable/purchase_selector"
                        android:textSize="@dimen/app_text_size_most"
                        android:textColor="@android:color/white"
                        android:padding="12dp"
                        android:gravity="center_horizontal"
                        android:layout_alignParentBottom="true"
                />
            </RelativeLayout>

        </LinearLayout>
</LinearLayout>