<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/fragment_header" />

    <TextView android:id="@+id/teacher_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/color_small_gray"
              android:textSize="@dimen/app_text_size_first"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="@dimen/_10dp"
              android:layout_marginBottom="@dimen/_10dp"
             />

    <RatingBar
            android:id="@+id/myRatingbar"
            style="@style/customRatingBarLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="2"
            android:stepSize="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/_10dp" >
    </RatingBar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal" >


            <EditText
                android:id="@+id/recharge_price"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:padding="5dp"
                android:textColor="@color/color_small_gray"
                android:textSize="@dimen/app_text_size_first"
                android:background="@drawable/recharge_shape"
                android:layout_gravity="top"
                android:gravity="top"
                android:hint="尊敬的用户，感谢您提供的建议反馈，我们将为您不断改进!"
                 />
        </LinearLayout>



    <TextView
        android:id="@+id/recharge_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_selector2"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/app_text_size_most" />

</LinearLayout>