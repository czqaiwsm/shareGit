<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:descendantFocusability="afterDescendants"
              >
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/pay_order">

        <TextView android:id="@+id/name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="16sp"
                  android:layout_marginLeft="@dimen/_10dp"
                  android:textColor="@color/color_small_gray"
                  />
        <TextView android:id="@+id/payStatus"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="16sp"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="@dimen/_10dp"
                  android:textColor="@color/login_normal"
                  />
        <TextView android:id="@+id/courseName"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="16sp"
                  android:layout_marginLeft="@dimen/_10dp"
                  android:layout_marginTop="@dimen/_10dp"
                  android:layout_below="@+id/name"
                  android:textColor="@color/color_small_gray"
        />

        <TextView android:id="@+id/price"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="16sp"
                  android:layout_marginRight="@dimen/_10dp"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/login_normal"
                  android:layout_alignBottom="@+id/courseName"
        />
        <View
                android:id="@+id/view"
                android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/white_bg_home"
              android:layout_marginTop="@dimen/_10dp"
              android:layout_below="@+id/price"/>
        <TextView android:id="@+id/time"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="支付时间"
                  android:textSize="16sp"
                  android:layout_marginTop="@dimen/_10dp"
                  android:layout_marginLeft="@dimen/_10dp"
                  android:textColor="@color/color_small_gray"
                  android:layout_below="@+id/view"
        />
        <TextView android:id="@+id/timeDetail"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="2016年03月21日"
                  android:textSize="16sp"
                  android:layout_marginRight="@dimen/_10dp"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/color_small_gray"
                  android:layout_alignBottom="@+id/time"
        />


        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/_10dp"
                      android:layout_below="@+id/timeDetail"
                      android:layout_alignParentRight="true"
                      android:orientation="horizontal">
            <TextView android:id="@+id/left_tv"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="16sp"
                      android:layout_marginRight="@dimen/_10dp"
                      android:textColor="@color/color_small_gray"
                      android:background="@drawable/feed_back_select"
                    />
            <TextView android:id="@+id/right_tv"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="16sp"
                      android:layout_marginRight="@dimen/_10dp"
                      android:textColor="@color/color_small_gray"
                      android:background="@drawable/feed_back_select"
                    />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>