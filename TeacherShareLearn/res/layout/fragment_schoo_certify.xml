<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

    <include layout="@layout/fragment_header"></include>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_marginTop="@dimen/_10dp"
                          android:layout_marginLeft="@dimen/_10dp"
                          android:layout_marginRight="@dimen/_10dp">
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textColor="@color/certify_txt"
                          android:textSize="@dimen/certify_txt_size"
                          android:text="为保证学生搜索到您,记得学历认证哦!"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textColor="@color/certify_txt2"
                          android:textSize="@dimen/certify_txt_size1"
                          android:layout_marginTop="3dp"
                          android:text="1.您身份信息,我享学替您保密"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textColor="@color/certify_txt2"
                          android:textSize="@dimen/certify_txt_size1"
                          android:layout_marginTop="3dp"
                          android:text="2.照片大小不要超过5M"/>


            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_small_gray"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"/>

            <RelativeLayout
                    android:id="@+id/degreeRl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/page_certify"
                    android:paddingBottom="@dimen/page_certify"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/item_click">
                <TextView android:layout_width="@dimen/teach_txt_size"
                          android:layout_height="match_parent"
                          android:textSize="@dimen/teach_font_size"
                          android:layout_gravity="center"
                          android:gravity="center_vertical"
                          android:textColor="@color/teach_txt_color"
                          android:text="在读学历"/>
                <TextView android:id="@+id/degree_name"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:textSize="@dimen/teach_font_size"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:textColor="@color/teach_txt_color2"
                          android:drawableRight="@drawable/arrow_right"
                          android:layout_alignParentRight="true"
                          android:drawablePadding="@dimen/choose_padd"
                />

            </RelativeLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_small_gray"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"/>

            <RelativeLayout
                    android:id="@+id/schoolRl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/page_certify"
                    android:paddingBottom="@dimen/page_certify"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/item_click">
                <TextView android:layout_width="@dimen/teach_txt_size"
                          android:layout_height="match_parent"
                          android:textSize="@dimen/teach_font_size"
                          android:layout_gravity="center"
                          android:gravity="center_vertical"
                          android:textColor="@color/teach_txt_color"
                          android:text="在读院校"/>
                <EditText android:id="@+id/school_name"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:textSize="@dimen/teach_font_size"
                          android:layout_gravity="right"
                          android:gravity="right"
                          android:textColor="@color/teach_txt_color2"
                          android:drawableRight="@drawable/arrow_right"
                          android:layout_alignParentRight="true"
                          android:drawablePadding="@dimen/choose_padd"
                          android:background="@null"
                          android:singleLine="true"
                          android:hint="请输入学校名称"
                />

            </RelativeLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_small_gray"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"/>

            <RelativeLayout
                    android:id="@+id/majorRl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/page_certify"
                    android:paddingBottom="@dimen/page_certify"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/item_click">
                <TextView android:layout_width="@dimen/teach_txt_size"
                          android:layout_height="match_parent"
                          android:textSize="@dimen/teach_font_size"
                          android:layout_gravity="center"
                          android:gravity="center_vertical"
                          android:textColor="@color/teach_txt_color"
                          android:text="专        业"/>
                <EditText android:id="@+id/major_name"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:textSize="@dimen/teach_font_size"
                          android:layout_gravity="right"
                          android:gravity="right"
                          android:textColor="@color/teach_txt_color2"
                          android:drawableRight="@drawable/arrow_right"
                          android:layout_alignParentRight="true"
                          android:drawablePadding="@dimen/choose_padd"
                          android:background="@null"
                          android:singleLine="true"
                          android:hint="请输入专业名称"
                />

            </RelativeLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_small_gray"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_marginTop="15dp"
                          android:layout_marginLeft="@dimen/_10dp"
                          android:layout_marginRight="@dimen/_10dp">
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textColor="@color/certify_txt"
                          android:textSize="@dimen/certify_txt_size"
                          android:text="上传学校相关证件照片"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textColor="@color/certify_txt2"
                          android:textSize="@dimen/certify_txt_size1"
                          android:layout_marginTop="3dp"
                          android:text="提示:学生证,校园卡,或其他相关证价"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_small_gray"
                        android:layout_marginTop="@dimen/_10dp"
                />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_marginTop="15dp"
                          android:layout_marginLeft="@dimen/_10dp"
                          android:layout_marginRight="@dimen/_10dp"
                          android:gravity="center">
                <FrameLayout android:layout_width="match_parent"
                             android:layout_height="140dp"
                             android:gravity="center"
                             android:layout_gravity="center"
                >
                    <LinearLayout
                            android:id="@+id/uploadLL"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:background="@drawable/white_ee_bg">
                        <ImageView android:layout_width="60dp"
                                   android:layout_height="60dp"
                                   android:layout_gravity="center_horizontal"

                        />
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_gravity="center_horizontal"
                                  android:text="点击上传"/>
                    </LinearLayout>
                    <ImageView android:id="@+id/schoolCertifyImg"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:gravity="center"
                               android:layout_gravity="center"

                    />
                </FrameLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_small_gray"
                        android:layout_marginTop="@dimen/_10dp"
                />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>